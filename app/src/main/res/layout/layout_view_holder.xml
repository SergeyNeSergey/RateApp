<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/viewHolderLayoutNameOfValuta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/viewHolderLayoutBorder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewHolderLayoutBorder3" />

    <TextView
        android:id="@+id/viewHolderLayoutBorder"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/colorGrey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/viewHolderLayoutGuideline"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/viewHolderLayoutCourse"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/viewHolderLayoutNameOfValuta"
        app:layout_constraintEnd_toStartOf="@+id/viewHolderLayoutBorder2"
        app:layout_constraintStart_toEndOf="@+id/viewHolderLayoutBorder"
        app:layout_constraintTop_toTopOf="@+id/viewHolderLayoutNameOfValuta" />

    <TextView
        android:id="@+id/viewHolderLayoutBorder2"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/colorGrey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/viewHolderLayoutGuideline2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/viewHolderLayoutResult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/viewHolderLayoutNameOfValuta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/viewHolderLayoutBorder2"
        app:layout_constraintTop_toTopOf="@+id/viewHolderLayoutNameOfValuta" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/viewHolderLayoutGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.40" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/viewHolderLayoutGuideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.80" />

    <TextView
        android:id="@+id/viewHolderLayoutBorder3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/colorClearBlack"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
